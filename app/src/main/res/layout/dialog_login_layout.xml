<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/confirm_dialog_bg2" >

    <TextView
        android:id="@+id/dialog_login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="用户登录界面"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/dialog_user_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_login_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_global_search_textbox"
        android:hint="请输入用户名"
        android:textColorHint="@android:color/white" />

    <EditText
        android:id="@+id/dialog_password_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_user_name_edit"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_global_search_textbox"
        android:hint="请输入密码"
        android:textColorHint="@android:color/white" />

    <Button
        android:id="@+id/dialog_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_password_edit"
        android:layout_margin="10dp"
        android:background="@drawable/button_drawable_selector"
        android:text="登录" />

</RelativeLayout>