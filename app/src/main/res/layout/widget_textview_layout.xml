<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/background_player_bar" >

        <ImageView
            android:id="@+id/title_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:clickable="true"
            android:src="@drawable/title_back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="文本控件学习"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/first_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_green_dark"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxEms="8"
        android:padding="@dimen/widget_text_pading"
        android:singleLine="true"
        android:text="@string/content_txt"
        android:textColor="@android:color/white"
        android:textSize="@dimen/widget_text_size" />

    <TextView
        android:id="@+id/two_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:padding="@dimen/widget_text_pading"
        android:text="@string/two_txt"
        android:textColor="@android:color/white"
        android:textSize="@dimen/widget_text_size" />

    <TextView
        android:id="@+id/three_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:padding="@dimen/widget_text_pading"
        android:text="美食原价108块一份现价18块 "
        android:textColor="@android:color/white"
        android:textSize="@dimen/widget_text_size" />

    <TextView
        android:id="@+id/four_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:drawableLeft="@drawable/ic_launcher"
        android:drawablePadding="5dp"
        android:padding="@dimen/widget_text_pading"
        android:text="美食 "
        android:textColor="@android:color/white"
        android:textSize="@dimen/widget_text_size" />

</LinearLayout>