            android:text="自定义View对话框" />

        <Button
            android:id="@+id/dialog_custome_alert_daiog_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义AlertDialog对话框" />

        <Button
            android:id="@+id/dialog_toast_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toast对话框" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onActivityDialogClickLisenter"
            android:text="Activity对话框" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onActivityTwoDialogClickLisenter"
            android:text="ActivityTwo对话框" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onActivityTwoDialogClickLisenter"
            android:text="ActivityTwo对话框" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
