<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intent 意图学习" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="直接调用 查看联系人"
        android:onClick="onActionViewOneClickLisenter" />
    
     <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐式调用 查看联系人"
        android:onClick="onActionViewTwoClickLisenter" />

     <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐式调用 拨打电话"
        android:onClick="onCallPhoneClickLisenter" />
     
</LinearLayout>