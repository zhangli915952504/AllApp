<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/mp3_music_one_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="播放音乐一" />
    <Button
        android:id="@+id/mp3_music_two_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="播放音乐通过Media Raw" />
    <Button
        android:id="@+id/mp3_music_three_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="播放" />
    <Button
        android:id="@+id/mp3_music_pasue_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="暂停" />

</LinearLayout>
