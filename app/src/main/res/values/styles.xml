<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="my_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="radio_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/tab_indector_textcolor_selector</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="radio_button_style_two" parent="radio_button_style">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
    </style>

    <style name="radio_button_style.radio_button_style_three">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
    </style>

</resources>